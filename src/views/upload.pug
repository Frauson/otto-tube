extends base

block content
    div.upload__container
        div.upload__video
            video#preview  
            button#actionbtn.social__btn Start Recording
        if errorMessage
            span.errorMessage=errorMessage
        form(method="POST", enctype="multipart/form-data").upload__form
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(name="title", placeholder="Title", required, type="text", maxlength=20)
            input(name="description", placeholder="Description", required, type="text", minlength=5)
            input(name="hashtags", placeholder="Hashtags, separated by comma", required, type="text")
            input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js")